{
    "name": "felipebufelli/weather-backend",
    "description": "Weather API using OpenWeatherMap",
    "type": "project",
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "App\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Felipe Bufelli"
        }
    ],
    "require": {
        "guzzlehttp/guzzle": "^7.10",
        "vlucas/phpdotenv": "^5.6",
        "firebase/php-jwt": "^6.10"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpunit/php-code-coverage": "^11.0"
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit -c phpunit.coverage.xml --coverage-text --coverage-html=build/coverage"
    }
}
